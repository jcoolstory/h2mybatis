<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.postni.h2mybatis.mapper.BoardMapper" >


    <resultMap id="boardAuthor" type="Member">
        <result property="id" column="id"></result>
        <result property="name" column="name"></result>
    </resultMap>
    <resultMap id="boardListVO" type="Board">

        <result property="no" column="no"></result>
        <result property="title" column="title"></result>
        <result property="createDate" column="createDate"></result>
        <result property="content" column="content"/>
        <collection property="author" resultMap="boardAuthor"></collection>
    </resultMap>

    <select id="getBoardList" resultMap="boardListVO">
        SELECT board.no as no , title, createDate, member.name as name , member.id as id
        FROM board
        LEFT JOIN member
        ON author = id
        ORDER BY no DESC
        LIMIT 20
    </select>

    <select id="getBoard" parameterType="int" resultMap="boardListVO">
        SELECT board.no as no , title, createDate, content, member.name as name , member.id as id
        FROM board
        LEFT JOIN member
        ON author = id
        WHERE board.no = #{boardNo}
    </select>

    <insert id="createBoard" parameterType="Board">
        INSERT
        INTO board
        (
          author,
          title,
          content
        )
        VALUES (
          #{author.id},
          #{title},
          #{content}
        )

    </insert>
    <update id="updateBoard" parameterType="Board">
        UPDATE board
        SET
          title = #{title},
          content = #{content}
        WHERE no = #{no}
    </update>


</mapper>